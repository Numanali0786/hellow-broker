generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql/sqlite
  url      = env("DATABASE_URL")
}

model Property {
  id              String         @id @default(cuid())
  title           String
  description     String
  location        String
  type            PropertyType
  listingCategory ListingCategory // ðŸ”¥ Buy | Rent | Commercial
  price           Int
  area            Int            // sqft or sq meters
  bedrooms        Int
  bathrooms       Int
  imageUrls       String[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

enum PropertyType {
  APARTMENT
  HOUSE
  VILLA
  STUDIO
  LAND
  COMMERCIAL_SPACE
}

enum ListingCategory {
  BUY
  RENT
  COMMERCIAL
}


 model User {
  id       String   @id @default(uuid())
  clerkId  String   @unique
  email    String   @unique
  role     String   @default("user") // "admin" or "user"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
